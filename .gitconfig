[user]
    name = Miles Johnson
    email = mileswjohnson@gmail.com
[core]
    editor = vim
    excludesFile = ~/.gitignore_global
    whitespace = space-before-tab,trailing-space
    filemode = false
    precomposeUnicode = true
    # Make `git rebase` safer on OSX: <http://www.git-tower.com/blog/make-git-rebase-safe-on-osx/>
    trustctime = false
    # Use inline word diffs: <https://www.viget.com/articles/dress-up-your-git-diffs-with-word-level-highlights>
    pager = /usr/local/share/git-core/contrib/diff-highlight/diff-highlight | less
[push]
    default = current
    followTags = true
[pull]
    ff = false
[rerere]
    enabled = true
[color]
    ui = always
    diff = auto
    grep = auto
    pager = true
    status = auto
    branch = auto
[color "diff"]
    commit = green
    meta = yellow
    frag = cyan
    old = red
    new = green
    whitespace = red reverse
[color "diff-highlight"]
    oldNormal = red bold
    oldHighlight = red bold 52
    newNormal = green bold
    newHighlight = green bold 22
[help]
    autoCorrect = true
[merge]
    log = true
[mergetool]
    prompt = false
    keepBackup = false
[diff]
    renames = copies
[difftool]
    prompt = false
[fetch]
    recurseSubmodules = on-demand
[log]
    decorate = full
[status]
    submoduleSummary = true
[apply]
    whitespace = fix
